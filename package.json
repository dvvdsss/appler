{
  "name": "apple-rag-mcp",
  "version": "1.1.3",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch server.ts",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop apple-rag-mcp",
    "pm2:restart": "pm2 restart apple-rag-mcp",
    "pm2:delete": "pm2 delete apple-rag-mcp",
    "pm2:logs": "pm2 logs apple-rag-mcp",
    "pm2:status": "pm2 status",
    "start:prod": "pnpm build && pm2 start ecosystem.config.cjs --env production",
    "clean": "rm -rf dist node_modules/.cache",
    "reinstall": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "deploy": "./deploy.sh",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "lint:biome": "biome lint .",
    "lint:biome:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "keywords": [
    "mcp",
    "mcp-2025-06-18",
    "streamable-http",
    "oauth-2.1",
    "authorization",
    "rag",
    "apple",
    "documentation",
    "ai",
    "vector-search",
    "semantic-search"
  ],
  "author": "Apple RAG Team",
  "license": "MIT",
  "description": "Modern MCP 2025-06-18 compliant server with OAuth 2.1 Authorization for Apple Developer Documentation RAG search - Production ready with vector similarity and semantic AI reranking",
  "dependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "pino-pretty": "^10.2.3",
    "pm2": "^5.3.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "wrangler": "^4.28.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.7.0+sha512.6b865ad4b62a1d9842b61d674a393903b871d9244954f652b8842c2b553c72176b278f64c463e52d40fff8aba385c235c8c9ecf5cc7de4fd78b8bb6d49633ab6"
}
