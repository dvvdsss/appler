{
  "name": "apple-rag-mcp",
  "version": "2.0.0",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch server.ts",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop apple-rag-mcp",
    "pm2:restart": "pm2 restart apple-rag-mcp",
    "pm2:delete": "pm2 delete apple-rag-mcp",
    "pm2:logs": "pm2 logs apple-rag-mcp",
    "pm2:status": "pm2 status",
    "start:prod": "pnpm build && pm2 start ecosystem.config.cjs --env production",
    "clean": "rm -rf dist node_modules/.cache",
    "reinstall": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "test:progress": "node test-progress.js",
    "test:ping": "node test-ping.js",
    "test:cancellation": "node test-cancellation.js",
    "test:security": "node test-security.js",
    "test:auth": "node test-authorization.js",
    "test:streamable": "node test-streamable-http.js",
    "test:basic": "node test-basic-mcp.js",
    "test:all": "node test-progress.js && node test-ping.js && node test-cancellation.js && node test-security.js && node test-authorization.js && node test-streamable-http.js && node test-basic-mcp.js",
    "test:mcp": "curl -X POST http://localhost:3001/ -H 'Content-Type: application/json' -H 'Accept: application/json' -H 'MCP-Protocol-Version: 2024-11-05' -d '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"initialize\",\"params\":{\"protocolVersion\":\"2024-11-05\",\"capabilities\":{},\"clientInfo\":{\"name\":\"test-client\",\"version\":\"1.0.0\"}}}'",
    "test": "echo \"Use 'pnpm test:all' to test complete MCP 2025-06-18 compliance and security\""
  },
  "keywords": [
    "mcp",
    "mcp-2025-06-18",
    "streamable-http",
    "oauth-2.1",
    "authorization",
    "rag",
    "apple",
    "documentation",
    "ai",
    "vector-search",
    "semantic-search"
  ],
  "author": "Apple RAG Team",
  "license": "MIT",
  "description": "Complete MCP 2025-06-18 compliant server with OAuth 2.1 Authorization for Apple Developer Documentation RAG search - Production ready",
  "dependencies": {
    "fastify": "^4.24.3",
    "postgres": "^3.4.5",
    "dotenv": "^16.3.1",
    "@types/node": "^20.10.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "pm2": "^5.3.0",
    "pino-pretty": "^10.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.7.0+sha512.6b865ad4b62a1d9842b61d674a393903b871d9244954f652b8842c2b553c72176b278f64c463e52d40fff8aba385c235c8c9ecf5cc7de4fd78b8bb6d49633ab6"
}
