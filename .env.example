# Apple RAG MCP Server - Environment Configuration Template
# Copy this file to .env.development or .env.production and configure

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# =============================================================================
# Cloudflare D1 Configuration (for token validation)
# =============================================================================
# Development: a63296ff-5954-445d-a84e-328bc61065f8
# Production:  6f3f8951-0eb8-4a63-a277-3d2fd8757705
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_D1_DATABASE_ID=your_d1_database_id

# =============================================================================
# SiliconFlow API Configuration
# =============================================================================
SILICONFLOW_API_KEY=your_siliconflow_api_key
SILICONFLOW_TIMEOUT=30

# =============================================================================
# Database Configuration (PostgreSQL for embeddings)
# =============================================================================
# Development: 198.12.70.36 (remote)
# Production:  localhost (same VPS)
EMBEDDING_DB_HOST=your_db_host
EMBEDDING_DB_PORT=5432
EMBEDDING_DB_DATABASE=apple_rag_db
EMBEDDING_DB_USER=apple_rag_user
EMBEDDING_DB_PASSWORD=your_password
EMBEDDING_DB_SSLMODE=disable

# =============================================================================
# Session Configuration
# =============================================================================
SESSION_SECRET=your_secure_session_secret
SESSION_TIMEOUT=1800
