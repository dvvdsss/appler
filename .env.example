# Apple RAG MCP Server - Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# SiliconFlow API Configuration
SILICONFLOW_API_KEY=your_siliconflow_api_key_here
SILICONFLOW_TIMEOUT=30

# Database Configuration
# Development Environment (Remote Database)
EMBEDDING_DB_HOST=your_remote_db_host
EMBEDDING_DB_PORT=5432
EMBEDDING_DB_DATABASE=your_database_name
EMBEDDING_DB_USER=your_db_user
EMBEDDING_DB_PASSWORD=your_db_password
EMBEDDING_DB_SSLMODE=require

# Production Environment (Local Database)
# EMBEDDING_DB_HOST=localhost
# EMBEDDING_DB_PORT=5432
# EMBEDDING_DB_DATABASE=apple_rag_db
# EMBEDDING_DB_USER=postgres
# EMBEDDING_DB_PASSWORD=your_local_password
# EMBEDDING_DB_SSLMODE=disable

# Search Configuration
USE_HYBRID_SEARCH=false

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here
SESSION_TIMEOUT=1800
