# Apple RAG MCP Server - Production Configuration

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=production
PORT=3001
BASE_URL=https://mcp.apple-rag.com

# =============================================================================
# Cloudflare D1 Configuration (for token validation)
# =============================================================================
# Cloudflare account ID and API token for accessing D1 database
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_D1_DATABASE_ID=your-d1-database-id

# =============================================================================
# SiliconFlow API Configuration
# =============================================================================
SILICONFLOW_API_KEY=your-siliconflow-api-key-here
SILICONFLOW_TIMEOUT=30

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL with pgvector extension
EMBEDDING_DB_HOST=localhost
EMBEDDING_DB_PORT=5432
EMBEDDING_DB_DATABASE=apple_rag_db
EMBEDDING_DB_USER=apple_rag_user
EMBEDDING_DB_PASSWORD=your-secure-password-here
EMBEDDING_DB_SSLMODE=require

# =============================================================================
# Search Configuration
# =============================================================================
# Enable hybrid search (vector + text)
USE_HYBRID_SEARCH=true

# =============================================================================
# Session Configuration
# =============================================================================
# Use a secure random string in production
SESSION_SECRET=your-secure-session-secret-minimum-32-characters
SESSION_TIMEOUT=1800
